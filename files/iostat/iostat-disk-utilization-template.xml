    <templates>
        <template>
            <template>Iostat-Disk-Utilization-Template</template>
            <name>IOstat</name>
            <description>Monitor block device statistics using iostat.&#13;
&#13;
Sourcecode &amp; Documentation/Updates/Bugtracker:&#13;
https://github.com/lesovsky/zabbix-extensions</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Iostat</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>iostat summary internal item</name>
                    <key>iostat.summary</key>
                    <history>1h</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>internal item to store iostat summary. Discovered items read data from this item.</description>
                    <applications>
                        <application>
                            <name>Iostat</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>iostat last data timestamp</name>
                    <type>DEPENDENT</type>
                    <key>iostat.timestamp</key>
                    <delay>0</delay>
                    <units>unixtime</units>
                    <description>timestamp of the last summary item</description>
                    <applications>
                        <application>
                            <name>Iostat</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$..timestamp.first()</params>
                        </step>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>return Date.parse(value)/1000;</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>iostat.summary</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{fuzzytime(5m)}=0</expression>
                            <name>Last iostat data timestamp too old</name>
                            <opdata>Timestamp received: {ITEM.LASTVALUE}</opdata>
                            <priority>WARNING</priority>
                            <description>Timestamp of iostat data is older than 5m. This indicates a problem with iostat statistics collection. Check cronjob for execution problems.</description>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Disks discovery</name>
                    <key>iostat.discovery</key>
                    <delay>3600</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#HARDDISK}</macro>
                                <value>^((xvd|sd|hd|vd)[a-z]|md[0-9]+|(nvme[0-9]+n[0-9]+))</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>1d</lifetime>
                    <description>Discover installed devices using iostat.&#13;
&#13;
Adjust filters to allow all discovered devices by completely removing it or narrow it down further.</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>Disk {#HARDDISK} average queue size</name>
                            <type>DEPENDENT</type>
                            <key>iostat.summary[{#HARDDISK},avgqu-sz]</key>
                            <delay>0</delay>
                            <value_type>FLOAT</value_type>
                            <units>req</units>
                            <description>The average queue length of the requests that were issued to the device.</description>
                            <applications>
                                <application>
                                    <name>Iostat</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$..disk[?(@.disk_device=='{#HARDDISK}')].['avgqu-sz'].first()</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>iostat.summary</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Disk {#HARDDISK} average requests size</name>
